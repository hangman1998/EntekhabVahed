<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMenu"
    android:background="@drawable/main_activity_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_input_course"
            android:text="@string/btn_input_course_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"

            android:textColor="@color/Beige"
            android:textSize="30dp"
            android:textStyle="bold"
            android:shadowColor="@color/Chocolate"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:background="@drawable/activity_menu_button_style"
            />
        <!-- -->


        <Button
            android:id="@+id/btn_schedule_viewer"
            android:text="@string/btn_schedule_viewer_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:textColor="@color/Beige"
            android:textSize="30dp"
            android:textStyle="bold"
            android:shadowColor="@color/Chocolate"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:background="@drawable/activity_menu_button_style"/>
        <!-- android:background="@drawable/mybutton"-->

        <Button
            android:id="@+id/btn_input_rule"
            android:text="@string/btn_input_rule_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"

            android:textColor="@color/Beige"
            android:textSize="30dp"
            android:textStyle="bold"
            android:shadowColor="@color/Chocolate"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:background="@drawable/activity_menu_button_style"/>
        <Button
            android:id="@+id/btn_about_us"

            android:text="@string/btn_about_us_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"

            android:textColor="@color/Beige"
            android:textSize="30dp"
            android:textStyle="bold"
            android:shadowColor="@color/Chocolate"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:background="@drawable/activity_menu_button_style"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/mobileBanner">
        </FrameLayout>
    </LinearLayout>

</LinearLayout>